extends ../base
include ../_includes/yesNoRadios

block variables
  -var title = __('Check your name is correct')
  -var confirmedName = hasData(data, 'personal.confirmedName') ? data.personal.confirmedName : ''

block content

  h1 #{title}

  

  div
    p #{__(`CRA doesn't need your middle name.`)}

  div
    table.pure-table
      thead
        tr
          th #{__('Full name')}
      tbody
        tr
          td
            div #{data.personal.firstName} #{data.personal.lastName}
  
  form.cra-form(method='post')
    +yesNoRadios('name', confirmedName, 'Is this your name?', errors)

    input#redirect(name='redirect', type='hidden', value='/personal/residence')

    +formButtons()
