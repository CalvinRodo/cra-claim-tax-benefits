extends ../base

block variables
  -var title = __('Enter your charitable donations')

block content

  h1 #{title}

  div
    p #{__('Please enter your charitable donations into the fields below.')}

  form.cra-form(method='post')
    +textInput('Total donations made to registered charities')(class='w-1-2 input-with-unit' name='donationsAmount' placeholder='0.00' aria-labelledby='donationsAmount__unit donationsAmount__label')

    input#redirect(name='redirect', type='hidden', value='/trillium/rent/amount')

    +formButtons('Continue', '/deductions/donations')
