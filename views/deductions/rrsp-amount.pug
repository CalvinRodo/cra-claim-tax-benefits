extends ../base

block variables
  -var title = __('Enter your RRSP contributions')

block content

  h1 #{title}

  p Please enter RRSP info

  div
    p #{__('Please enter your RRSP contributions for the current tax year (filing for 2018)')}

  form.cra-form(method='post')
    div
      fieldset.fieldset
        legend.fieldset__legend
          p RRSP contributions
        .text
          input.text__input(id="rrsp" name="rrsp" type="text" value="0.00" aria-describedby=(errors ? 'rrsp_error' : false))
        if errors
          span.validation-message #{__(errors.rrsp.msg)}
    div
      details.
        <summary><span>Help with RRSP contributions</span></summary>
        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>

    input#redirect(name='redirect', type='hidden', value='/deductions/medical')

    .buttons
      .buttons--left
        button(type='submit') Continue
      .buttons--right
        a.button-link.transparent(href='/deductions/rrsp') Cancel
