extends ../base

block variables
  -var title = __('Enter rent paid in 2018')

block content

  h1 #{title}

  div
    p #{__('To get the most out of your')} <strong>#{__('Trillium Benefit')}</strong>, #{__('you can enter the amount you paid in rent in the current tax year.')}

    p #{__('Enter the')} <strong>#{__('total annual rent')}</strong>, #{__('you paid for your main residence.')}

    p #{__('Leave the field as')} <strong>0</strong>, #{__('if you paid no rent in 2018 or if you donâ€™t have the receipts to verify this information later.')}

  form.cra-form(method='post')
    div(class={['has-error']: errors && errors.trilliumRentAmount})
      label#trilliumRentAmount__label(for='trilliumRentAmount') #{__('Total annual rent in 2018')}
      if errors
        +validationMessage(errors.trilliumRentAmount.msg, 'trilliumRentAmount')
      span#trilliumRentAmount__unit.input-with-unit__unit(for='trilliumRentAmount') $
      input.w-1-2.input-with-unit#trilliumRentAmount(name='trilliumRentAmount', type='text', placeholder="0.00", value=(hasData(data, 'deductions.trilliumRentAmount') ? data.deductions.trilliumRentAmount : 0) autocomplete='off' aria-describedby=(errors && errors.trilliumRentAmount ? 'trilliumRentAmount-error' : false) aria-labelledby="trilliumRentAmount__label trilliumRentAmount__unit")

    input#redirect(name='redirect', type='hidden', value='/review')

    +formButtons('Continue')
