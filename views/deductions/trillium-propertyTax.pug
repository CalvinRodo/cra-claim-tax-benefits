extends ../base

block variables
  -var title = __('Property tax')
  -var trilliumPropertyTaxClaim = !hasData(data, 'deductions.trilliumPropertyTaxClaim') ? '' : data.deductions.trilliumPropertyTaxClaim ? 'Yes' : 'No'

block content

  h1 #{title}

  form.cra-form(method='post')
    +radiosYesNo('trilliumPropertyTaxClaim', 'At any time in 2019, did you own your principal residence?', trilliumPropertyTaxClaim)

    include ../_includes/principalResidence

    input#redirect(name='redirect', type='hidden', value='/trillium/longTermCare')

    +formButtons()
