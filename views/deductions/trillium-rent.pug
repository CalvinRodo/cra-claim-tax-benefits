extends ../base

block variables
  -var title = __('Rent')
  -var trilliumRentClaim = !hasData(data, 'deductions.trilliumRentClaim') ? '' : data.deductions.trilliumRentClaim ? 'Yes' : 'No'

block content

  h1 #{title}

  form.cra-form(method='post')
    +radiosYesNo('trilliumRentClaim', 'At any time in 2019, did you pay rent for your principal residence?', trilliumRentClaim)

    include ../_includes/principalResidence

    input#redirect(name='redirect', type='hidden', value='/trillium/propertyTax')

    +formButtons()
