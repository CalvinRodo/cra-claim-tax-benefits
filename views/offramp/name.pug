extends ../base
include ../_includes/banner

block variables
  -var title = __('Change your name with CRA')

block content

  h1 #{title}

  

  .offramp
    p #{__('You can still use this online service with the name CRA has on your file.')}

    p #{__('To change the name on your CRA file,')} <a href=#{__('https://www.canada.ca/en/revenue-agency/services/tax/individuals/frequently-asked-questions-individuals/should-you-tell-cra-about-your-change-name.html')}>#{__('tell them about your change of name.')}</a>

    div
      p #{__('For more information, contact CRA by:')}
      include ../_includes/phone-bullets

      a(href='/personal/residence' role='button' draggable='false') #{__('Continue')}