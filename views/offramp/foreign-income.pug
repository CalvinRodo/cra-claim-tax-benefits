extends ../base
include ../_includes/banner

block variables
  -var title = __('File your taxes another way')

block content

  h1 #{title}

  .offramp
    p #{__(`You cannot use this online service because you had income from sources outside Canada.`)}
    p #{__('You can use ')} <a href=#{__('https://www.canada.ca/en/revenue-agency/services/e-services/e-services-individuals/netfile-overview.html')}>#{__('NETFILE ')}</a> #{__('to file taxes securely online. ')} <a href=#{__('https://www.canada.ca/en/revenue-agency/services/e-services/e-services-individuals/netfile-overview/certified-software-netfile-program.html')}>#{__('Learn ')}</a> #{__('which certified NETFILE software is free, and ')} <a href=#{('https://www.canada.ca/en/revenue-agency/services/e-services/e-services-individuals/netfile-overview/eligibility.html')}>#{__('check ')}</a> #{__('if you can use it. Certified means CRA approves the software.')}

    div
      p #{__('For more information, contact CRA by:')}
      include ../_includes/phone-bullets