extends ../base
include ../_includes/banner

block variables
  -var title = __('Vote in the federal election (optional)')
  -var confirmOptIn = !hasData(data, 'vote.confirmOptIn') ? '' : data.vote.confirmOptIn

block content

  h1 #{title}

  +banner('blue')
    p #{__('CRA lets you register to vote or update your voter information when filing taxes.')}

  form.cra-form(method='post')
    +radiosYesNo('confirmOptIn', 'Would you like to vote in the federal election?', confirmOptIn)

    input#redirect(name='redirect', type='hidden', value='/confirm-income')

    +formButtons()

