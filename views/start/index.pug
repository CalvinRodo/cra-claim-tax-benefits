extends ../base

block content

  h1 #{__('Claim Tax Benefits')}

  div
    p #{__('Welcome to the Canada Revenue Agency’s new')} <strong>#{__('Claim Tax Benefits')}</strong> #{__('service')}.
    p #{__('This service is to claim tax benefits online.')} #{__('You need to be eligible to use this service.')}
    p #{__('In order to claim tax benefits online, you must have the following:')}
    ul
      li #{__('Your personal access code')}
      li #{__('Social Insurance Number (SIN)')}
      li #{__('Income information')}

  div
    a.button-link(href='/login/code' role='button' draggable='false') #{__('Start now')} <span aria-hidden="true">→</span>
