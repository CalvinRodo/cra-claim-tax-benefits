extends ../base

block variables
  -var title = __('Enter your personal filing code')

block content

  h1 #{title}

  div
    p #{__('Your code is in the CRA letter with this website link.')}

  div
    form.cra-form(method='post')
      +textInput('Personal filing code', null, 'For example: A5G98S4K1')(class='w-3-4', id='code' name='code', value=data.code)

      div
        details.
          <summary><span>#{__('Help with personal filing code')}</span></summary>
          <p>#{__('Your code has 9-characters and you can find it on the CRA')} <i>#{__('service.name')}</i>#{__(' letter. The letter has your name and address at the top.')}</p>

      input#redirect(name='redirect', type='hidden', value='/login/sin')

      +formButtons()
