extends ../base

block variables
  -var title = __('Foreign income')
  -var foreignIncome = hasData(data, 'login.foreignIncome') ? data.login.foreignIncome : ''

block content

  +stepper('Screening questions', '7', '7')

  h1.stepperH1 #{title}

  form.cra-form(method='post')
    +radiosYesNo('foreignIncome', 'Did any of your 2018 income come from sources outside Canada?')

    input#redirect(name='redirect', type='hidden', value='/login/code')

    +formButtons()