extends ../base
include ../_includes/banner


block variables
  -var title = data.login.securityQuestion.length ? __('Choose another security question') : __('Choose a security question')
  -var securityQuestion = hasData(data, 'login.securityQuestion') ? data.login.securityQuestion : ''

block content

  h1 #{title}

  form.cra-form.cra-form--lg(method='post')
    +radios('securityQuestion', 'Answer a question from this list to get your notice of assessment immediately after you file with this service:', null,[
      {value: "/login/questions/rrsp", label: "Details of your contribution to a Registered Retirement Savings Plan (RRSP)"},
      {value: "/login/questions/tfsa", label: "Details of your contribution to a Tax Free Savings Account (TFSA)"},
      {value: "/login/questions/ccb", label: "Details of your Canada Child Benefit (CCB)"},
      {value: "/login/questions/bankruptcy", label: "Details of your bankruptcy assignment"},
      {value: "/login/questions/dateOfResidence", label: "Date you became a resident of Canada"},
      {value: "/login/questions/prison", label: "Your date of entry or release from prison"},
      {value: "/checkAnswers", label: "Skip security questions"}
    ])

    +banner('blue')
      p #{__('If you skip these questions, you will wait about 8 weeks to get a notice of assessment.')}

    +formButtons('Continue', '/login/securityQuestion', "Back to previous questions")
