extends ../base

block variables
  -var title = __('Age 65 and above')
  -var ageYesNo = hasData(data, 'login.ageYesNo') ? data.login.ageYesNo : ''

block content

  +stepper('1', '7')

  h1 #{title}

  form.cra-form(method='post')
    +radiosYesNo('ageYesNo', 'Are you 65 or older?', ageYesNo)

    input#redirect(name='redirect', type='hidden', value='/eligibility/taxable-income')

    +formButtons()